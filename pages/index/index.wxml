<!--index.wxml-->
<view class="container">
  <scroll-view scroll-y="true" class="scroll-view">
    <t-input label="推送标题" placeholder="点击+添加空格">
      <t-icon slot="suffix" name="add-circle" bind:click="onAddBlankTap" color="#00b40f"></t-icon>
    </t-input>
    <view class="custom-divider" />
    <t-input label="推送正文" placeholder="点击添加空格/换行">
      <t-icon slot="suffix" name="add-circle" bind:click="onAddBlankTap" color="#00b40f"></t-icon>
      <t-divider slot="suffix" />
      <t-icon slot="suffix" name="enter" bind:click="onAddEnterTap" color="#00b40f"></t-icon>
    </t-input>
    <view class="custom-divider" />
    <view class="wrapper">
      <t-input label="推送头像" placeholder="点击右边是选已上传">
        <t-icon slot="suffix" name="image" bind:click="onAddBlankTap" color="#00b40f"></t-icon>
      </t-input>
    </view>
    <view class="custom-divider" />
    <view class="upload-container">
      <text class="upload-tip">点击下方是上传，二选一</text>
      <t-upload class="upload-input" mediaType="{{['image']}}" max="{{1}}" files="{{fileList}}" bind:add="handleAdd" bind:remove="handleRemove">
      </t-upload>
    </view>
    <view class="custom-divider" />
    <t-input label="附加歌曲" placeholder="请粘贴歌曲分享链接(选填)" />
    <t-radio-group default-value="0" borderless t-class="music-id-radio-box">
      <t-radio block="{{false}}" label="歌曲id" value="0" />
      <t-radio block="{{false}}" label="歌单id" value="1" />
    </t-radio-group>
    <view class="custom-divider" />
    <t-input label="附加其他" placeholder="跟歌曲二选一，只能填一个(选填)" />
    <view class="custom-divider" />
    <t-cell class="mb-16" title="推送对象" arrow hover note="{{cityText}}" bind:click="onCityPicker" />
    <view class="custom-divider" />
    <t-picker visible="{{cityVisible}}" value="{{cityValue}}" data-key="city" title="推送对象" cancelBtn="取消" confirmBtn="确认" bindchange="onPickerChange" bindpick="onColumnChange" bindcancel="onPickerCancel">
      <t-picker-item options="{{citys}}" />
    </t-picker>
    <!-- 时分 -->
    <t-cell title="选择时间" hover note="{{minuteText || ''}}" arrow data-mode="minute" bindtap="showTimePicker" t-class="pannel-item" />
    <!-- 时分 -->
    <t-date-time-picker title="选择时间" visible="{{minuteVisible}}" mode="{{['null', 'minute']}}" value="{{minute}}" format="HH:mm" bindchange="onTimePickerConfirm" bindpick="onTimePickerColumnChange" bindcancel="hideTimePicker" />
    <t-input label="重复" value='zeze' disabled />
    <t-radio-group default-value="0" borderless t-class="music-id-radio-box">
      <t-radio block="{{false}}" label="每天" value="0" />
      <t-radio block="{{false}}" label="每周" value="1" />
      <t-radio block="{{false}}" label="每月" value="2" />
      <t-radio block="{{false}}" label="单次" value="3" />
    </t-radio-group>
    <view class="custom-divider" />
    <t-checkbox-group t-class="music-id-radio-box" borderless bind:change="onChange" defaultValue="{{demoCheckboxMax}}">
  <t-checkbox block="{{false}}" value="checkbox1" label="一" />
  <t-checkbox block="{{false}}" value="checkbox2" label="二" />
  <t-checkbox block="{{false}}" value="checkbox3" label="三" />
  <t-checkbox block="{{false}}" value="checkbox4" label="四" />
  <t-checkbox block="{{false}}" value="checkbox5" label="五" />
  <t-checkbox block="{{false}}" value="checkbox6" label="六" />
  <t-checkbox block="{{false}}" value="checkbox7" label="日" />
</t-checkbox-group>

  </scroll-view>
</view>